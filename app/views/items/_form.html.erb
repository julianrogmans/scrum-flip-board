		</div>
	</div>
	<br />
	<div class="row">
		<div class="col-sm-6 col-sm-offset-3">
			<%= f.label :description, :class => "form-label" %>
			<%= f.text_area :description, :class => "form-control" %>
		</div>
	</div>
	<br />
	<div class="row">
		<div class="col-sm-12 text-center">
			<%= f.submit :class => "btn btn-success" %>
		</div>
	</div>

<% end %>