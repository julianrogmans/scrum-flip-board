<div class="container cork">
	<h4 class="btn btn-success"><%= link_to "Add To Do", new_item_path %></h4>
	<div class="row hidden-xs">
		<% @sections.each do |section| %>
			<div class="col-sm-4">
				<h1 class="text-center sectionback"><%= section.name %></h1>
				<hr />
			</div>
		<% end %>
		<% @sections.each do |section| %>
			<div class="col-sm-4">
				<% @items.where(section_id: section.id).each do |item| %>
					<div class="panel panel-warning">
						<div class="panel-heading">
							<h3 class="panel-title">
							<%= link_to item.title, item %>
							</h3>
						</div>
						<div class="panel-body">
							<p><%= item.description %></p>
						</div>
						<div class="panel-footer">
							<%= link_to 'Edit', edit_item_path(item) %> |
							<%= link_to 'Delete', item, method: :delete, data: { confirm: 'Are you sure?' } %>
						</div>
					</div>
				<% end %>
			</div>
		<% end %>
	</div>
	<div class="row visible-xs">
		<% @sections.each do |section| %>
			<div class="col-xs-12">
				<h1 class="text-center sectionback"><%= section.name %></h1>
				<hr />
			</div>
			<div class="col-xs-12">
				<% @items.where(section_id: section.id).each do |item| %>
					<div class="panel panel-warning">
						<div class="panel-heading">
							<h3 class="panel-title">
							<%= link_to item.title, item %>
							</h3>
						</div>
						<div class="panel-body">
							<p><%= item.description %></p>
						</div>
					</div>
				<% end %>
			</div>
		<% end %>
	</div>
</div>
